pipeline {
    agent any

    environment {
        CI = 'true'
    }

    parameters {
        booleanParam(name: 'FIX_LINT', defaultValue: false, description: 'Fix linting errors')
        booleanParam(name: 'SILENT_TEST', defaultValue: false, description: 'Run tests in silent mode')
    }

    stages {
				stage('Install nodejs') {
						steps {
								sh 'apt-get install -y curl'
								sh 'curl -fsSL https://deb.nodesource.com/setup_22.x -o nodesource_setup.sh'
								sh 'bash nodesource_setup.sh'
								sh 'apt-get install -y nodejs'
								sh 'node -v'
						}
				}

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Prettier') {
            steps {
                sh 'npm run format'
            }
        }

        stage('Run ESLint') {
            steps {
                script {
                    if (params.FIX_LINT) {
                        sh 'npm run lint:fix'
                    } else {
                        sh 'npm run lint'
                    }
                }
            }
        }

        stage('Run Unit Tests') {
            steps {
                script {
                    if (params.SILENT_TEST) {
                        sh 'npm run test:silent'
                    } else {
                        sh 'npm run test'
                    }
                }
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: '**/test-results.xml', allowEmptyArchive: true
        }
    }
}
